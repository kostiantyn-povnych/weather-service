# Weather Service - Local Development Configuration
# This configuration is optimized for local development without external dependencies

# External API Configuration
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# AWS Configuration (not used in local mode)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566

# Cache Configuration - Memory-based for simplicity
CACHE_ENABLED=true
CACHE_BACKEND=memory
CACHE_TTL_SECONDS=300
CACHE_PREFIX=weather-cache-local
REDIS_URL=redis://localhost:6379/0

# Rate Limiting Configuration - Disabled for local development
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REDIS_HOST=localhost
RATE_LIMIT_REDIS_PORT=6379
RATE_LIMIT_REDIS_DB=0
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Event Store Configuration - Local file storage
EVENT_STORE_TYPE=local
EVENT_STORE_LOCAL_FILE_PATH=events.log
EVENT_STORE_AWS_DYNAMODB_TABLE_NAME=weather-svc-events

# Data Store Configuration - Local directory storage
DATA_STORE_TYPE=local
DATA_STORE_LOCAL_DIRECTORY=data
DATA_STORE_S3_BUCKET_NAME=weather-svc-data
DATA_STORE_S3_FOLDER_NAME=weather
