  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "args": [
        "weather_service.api.app:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--workers",
        "4",
        // "--reload",
        "--log-config",
        "config/logging.yml"
      ],
      "jinja": true
    }
  ]
}
